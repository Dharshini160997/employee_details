<html>
  <table border="1" cellpadding="3" cellspacing="3" valign="middle" style="border-collapse:collapse" >
  <tr>
    <th>S No</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email </th>
    <th>Phone</th>
    <th>Salary</th>
    <th>Dept Name</th>
  </tr>
  <% i = 1
  @details.each do |detail|%>
  <tr>
    <td><%=i%></td>
    <td><%=detail['first name']%></td>
    <td><%=detail['last name']%>
    <td><%=detail['email']%></td>
    <td><%=detail['phone']%></td>
    <td><%=detail['salary']%></td>
    <td><%=detail['dept_name']%></td>
  </tr>
  <%i=i+1%>
  <% end %>
</table>
</html>